{%extends 'students/base.html.jinja'%}
{% block title %}
Requests
{% endblock title %}

{% block content %}
<section class="">
    <div class="search-header bg-light py-4">
        <div class="container text-white-50">
            <h3 class="text-warning">Book Requests</h3>
            <p class="my-1">
                <small>
                    No. of requests <span class="text-warning mx-1">0</span>
                </small>
            </p>
            <p class="my-1">
                <small>
                    You currently have <span class="text-warning mx-1">0</span> unreturned books.
                </small>
            </p>
        </div>
    </div>
    <div class="container">
        <ul class="nav mt-3 nav-c-tabs flex-row overflow-auto">
            <li class="nav-item">
                <a href="{{url_for('students.checkout')}}?tab=Pending" class="nav-link active">Pending</a>
            </li>
            <li class="nav-item">
                <a href="{{url_for('students.checkout')}}?tab=Approved" class="nav-link">Approved</a>
            </li>
            <li class="nav-item">
                <a href="{{url_for('students.checkout')}}?tab=Unreturned" class="nav-link">Not Yet Returned</a>
            </li>
            <li class="nav-item">
                <a href="{{url_for('students.checkout')}}?tab=Completed" class="nav-link">Completed</a>
            </li>
        </ul>

        <div class="mt-3">
            {% for request in requests %}
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="fw-bold">{{request.rental_no}}</h6>
                    <p class="text-black-50">
                        <small>{{request.date}}</small>
                    </p>
                    <div class="text-secondary">
                        {% for details in request.rental_details %}
                        <div class="card mb-2">
                            <div class="card-body">
                                <p class="my-1">{{details.title}}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock content %}