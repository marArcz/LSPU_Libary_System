{%extends 'students/base.html.jinja'%}
{% block title %}
Requests
{% endblock title %}

{% block content %}
<section class="">
    <div class="search-header bg-light py-4">
        <div class="container text-white-50">
            <h3 class="text-warning">Book Requests</h3>
            <p class="my-1">
                <small>
                    No. of requests <span class="text-warning mx-1">0</span>
                </small>
            </p>
            <p class="my-1">
                <small>
                    You currently have <span class="text-warning mx-1">0</span> unreturned books.
                </small>
            </p>
        </div>
    </div>
    <div class="container">
        <ul class=" mt-3 nav-c-tabs mb-2" data-active="{{tab}}">
            <li class="nav-item">
                <a href="{{url_for('students.requests')}}?tab=Pending" data-key="pending" class="nav-link ">Pending</a>
            </li>
            <li class="nav-item">
                <a href="{{url_for('students.requests')}}?tab=Approved" data-key="approved"
                    class="nav-link">Approved</a>
            </li>
            <li class="nav-item">
                <a href="{{url_for('students.requests')}}?tab=Unreturned" data-key="unreturned" class="nav-link">Not Yet
                    Returned</a>
            </li>
            <li class="nav-item">
                <a href="{{url_for('students.requests')}}?tab=Completed" data-key="completed"
                    class="nav-link">Completed</a>
            </li>
        </ul>
        {% if requests|length > 0 %}
        <div class="alert alert-info py-2">
            <small>
                <i class="me-1 bx bx-info-circle"></i> Showing <span class=" text-capitalize">{{tab}} Requests</span>
            </small>
        </div>
        {% else %}
        <p class="mt-4 text-center text-secondary">Nothing to display.</p>
        {% endif %}
        <div class="mt-3">
            {% for request in requests %}
            <div class="card mb-3">
                <div class="card-body p-4">
                    <h6 class="fw-bold">{{request.rental_no}}</h6>
                    <p class="text-black-50">
                        <small>{{request.date}}</small>
                    </p>
                    <div class="text-secondary">
                        {% if request.rental_details|length == 1 %}
                        <ul class="nav-c-list single">
                            {% for details in request.rental_details %}
                            <li>
                                <p class="my-1 fw-bold">{{details.title}}</p>
                                <p class="my-1">
                                    <small>Category: {{details.category_name}}</small>
                                </p>

                            </li>
                            {% endfor %}
                        </ul>
                        {% elif request.rental_details|length > 1 %}
                        <ul class="nav-c-list">
                            {% for details in request.rental_details %}
                            <li>
                                <p class="my-1 fw-bold">{{details.title}}</p>
                                <p class="my-1">
                                    <small>Category: {{details.category_name}}</small>
                                </p>

                            </li>
                            {% endfor %}
                        </ul>
                        {%else%}
                        <p class="text-center text-secondary">Nothing to display.</p>
                        {% endif %}

                        {# buttons #}

                        <div class="mt-5 ">
                            {% if request.status == 1 %}
                            <button type="button" class="btn btn-sm btn-c-light-dark pending-btn">
                                <i class="bx bx-hourglass"></i> Pending Request
                            </button>
                            {% elif request.status == 1 %}
                            <button type="button" class="btn btn-sm btn-c-light-primary approved-btn">
                                <i class="bx bx-check"></i> Approved
                            </button>
                            {% elif request.status == 2 %}
                            <button type="button" class="btn btn-sm btn-c-light-dark unreturned-btn">
                                <i class="bx bx-minus"></i> Not Yet Returned
                            </button>
                            {% elif request.status == 3 %}
                            <button type="button" class="btn btn-sm btn-c-light-success completed-btn">
                                <i class="bx bx-check"></i> Completed
                            </button>
                            {%else%}
                            <button type="button" class="btn btn-sm btn-c-light-danger declined-btn">
                                <i class='bx bx-dislike' ></i> Declined
                            </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock content %}


{% block scripts %}

{% endblock scripts %}